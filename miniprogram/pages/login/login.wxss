.container {
    width: 100%;
    height: 100%;
    padding-top: 100rpx;
}
.photo {
    height: 160rpx;
    width: 160rpx;
    border-radius: 50%;
    margin-bottom: 40rpx;
    overflow: hidden;
}
.photo image {
    height: 100%;
    width: 100%;
}
.item {
    width: 500rpx;
    height: 80rpx;
    margin-top: 30rpx;
    border-bottom: 2rpx solid #cdcdcd; 
    display: flex;
}
.item text {
    width: 200rpx;
    color: #2c2c2c;
}
.password text {
    margin-right: 22rpx;
}
.img-box {
    width: 80rpx;
    height: 80rpx;
}
.img-box image {
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx 0 0 10rpx;
}
.item input {
    color: #8a8a8a;
}
.btn {
    margin-top: 80rpx;
    height: 80rpx;
    width: 200rpx;
    background-color: #1196db;
    border-radius: 80rpx;
    text-align: center;
    color: #fff;
    line-height: 80rpx;
}