.container {
    height: 100%;
    width: 100%;
    background-color: #f5f5f5;
    padding-bottom: 30rpx;
}
.list {
    height: 100%;
    background-color: #f5f5f5;
    width: 100%;
}
.item {
    height: 280rpx;
    width: 690rpx;
    margin: 30rpx 0 0 30rpx;
    background-color: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    display: flex;
}
.item .item-img {
    width: 280rpx;
    height: 280rpx;
    border-radius: 16rpx;
    overflow: hidden;
}
.item-img image {
    width: 280rpx;
    height: 280rpx;
}
.item-info {
    margin-left: 30rpx;
    width: 390rpx;
    height: 280rpx;
}
.info-top {
    margin-top: 30rpx;
    font-size: 42rpx;
    height: 48rpx;
    line-height: 48rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
.info-top image{
    height: 42rpx;
    width: 42rpx;
    margin-left: 30rpx;
}
.info-mid {
    font-size: 34rpx;
    margin-top: 16rpx;
    color: #8a8a8a;
}
.info-foot {
    font-size: 34rpx;
    color: #8a8a8a;
    height: 60rpx;
    display: flex;
    align-items: flex-end;
}
.info-foot .icon {
    color: #ea2a2a;
    margin-left: 30rpx;
}
.info-foot .price {
    color: #ea2a2a;
    font-size: 44rpx;
}