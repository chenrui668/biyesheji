.container {
    height: 100%;
    width: 100%;
}
.top {
    height: 460rpx;
    width: 100%;
    position: relative;
}
.bg {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.photo {
    width: 180rpx;
    height: 180rpx;
    background-color: #cdcdcd;
    margin: 100rpx auto 0;
    border-radius: 50%;
    overflow: hidden;
}
.photo image {
    width: 100%;
    height: 100%;
}
.btn {
    width: 100%;
    height: 60rpx;
    margin-top: 50rpx;
    text-align: center;
}
.btn-item {
    display: inline-block;
    margin: 0 20rpx;
    height: 100%;
    width: 150rpx;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #2c2c2c;
    background-color: #cdcdcd;
    border-radius: 60rpx;
}
.account {
    height: 80rpx;
    width: 100%;
    color: #fff;
    font-size: 48rpx;
    text-align: center;
    margin-top: 30rpx;
}
.cancellation {
    height: 50rpx;
    width: 120rpx;
    font-size: 36rpx;
    line-height: 50rpx;
    display: block;
    margin: 10rpx auto;
}
.list {
    width: 550rpx;
    height: 100%;
    border-radius: 20rpx;
    background-color: #fff;
    padding: 0 100rpx;
}
.list-item {
    height: 80rpx;
    width: 100%;
    margin-top: 20rpx;
    font-size: 40rpx;
    line-height: 80rpx;
    position: relative;
    color: #2c2c2c;
    border-bottom: 2rpx solid #bfbfbf;
}
.right-text {
    position: absolute;
    right: 0;
    color: #8a8a8a;
}
.list-address {
    height: auto;
    margin: 20rpx 0 80rpx;
}
.list-address .address {
    width: 100%;
    color: #8a8a8a;
}
.list-change {
    height: 60rpx;
    line-height: 60rpx;
    color: #8a8a8a;
}
.list-change image {
    height: 36rpx;
    width: 36rpx;
    position: absolute;
    right: 10rpx;
    top: 12rpx;
}
.money-page {
    background-color: rgba(0, 0, 0, 0.4);
    width: 750rpx;
    position: fixed;
    top: 0;
    z-index: 10;
}
.money-content {
    width: 680rpx;
    padding: 40rpx 0 60rpx;
    margin: 240rpx auto;
    background-color: #fff;
    border-radius: 20rpx;
}
.money-title {
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 40rpx;
}
.money-value {
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 60rpx;
}
.money-btn {
    margin-top: 40rpx;
    height: 80rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.money-btn_item {
    margin: 0 40rpx;
    background-color: #1196db;
    height: 100%;
    width: 200rpx;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    border-radius: 80rpx;
}
.money-recharge {
    border-top: 2rpx solid #bfbfbf;
    padding-top: 20rpx;
}
.money-recharge_value {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
}
.money-recharge_value input,.money-recharge_value text {
    width: 200rpx;
    margin-left: 160rpx;
}
.btn-recharge {
    margin: 20rpx auto 0;
}